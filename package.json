{
  "name": "graphql_prisma_backend_boilerplate",
  "version": "1.0.0",
  "description": "graphql_prisma_backend_boilerplate",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tylim88/Graphql-Prisma-BackEnd-Boilerplate.git"
  },
  "scripts": {
    "start": "node dist/index.js",
    "start-local": "env-cmd ./.config/dev.env node dist/index.js",
    "build": "babel src --out-dir dist --copy-files && rm -r dist/prodSchema && rm -r dist/devSchema && rm -r dist/testSchema",
    "heroku-postbuild": "npm run build",
    "dev": "env-cmd ./.config/dev.env nodemon src/index.js --ext js,graphql --exec babel-node",
    "test-ci": "jest --runInBand",
    "test": "env-cmd ./.config/test.env jest --watch --runInBand",
    "get-schema-dev": "prisma generate -e ./.config/dev.env",
    "get-schema-prod": "prisma generate -e ./.config/prod.env",
    "get-schema-test": "prisma generate -e ./.config/test.env",
    "deploy-dev": "prisma deploy -e ./.config/dev.env",
    "deploy-prod": "prisma deploy -e ./.config/prod.env",
    "deploy-test": "prisma deploy -e ./.config/test.env",
    "docker-down": "env-cmd ./.config/dev.env docker-compose -f ./prisma/docker-compose.yml down",
    "docker-up": "env-cmd ./.config/dev.env docker-compose -f ./prisma/docker-compose.yml up -d"
  },
  "jest": {
    "globalSetup": "./tests/jest/globalSetup.js",
    "globalTeardown": "./tests/jest/globalTeardown.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "apollo-boost": "^0.1.21",
    "apollo-cache-inmemory": "^1.3.10",
    "apollo-client": "^2.4.6",
    "apollo-link": "^1.2.3",
    "apollo-link-error": "^1.1.1",
    "apollo-link-http": "^1.5.5",
    "apollo-link-ws": "^1.0.9",
    "apollo-utilities": "^1.0.25",
    "bcrypt": "^3.0.2",
    "cross-fetch": "^2.2.3",
    "graphql": "^0.13.2",
    "graphql-yoga": "^1.16.7",
    "jsonwebtoken": "^8.4.0",
    "prisma-binding": "^2.2.1",
    "subscriptions-transport-ws": "^0.9.15"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "env-cmd": "^8.0.2",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "nodemon": "^1.18.6",
    "prettier": "^1.15.2",
    "pretty-quick": "^1.8.0",
    "prisma": "^1.20.7"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "prettier": {
    "eslintIntegration": true,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "es5",
    "semi": false,
    "arrowParens": "always"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
